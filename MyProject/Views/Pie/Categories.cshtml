@using SiddharthPieShop.ViewModel
@model PieListViewModel

     <style>
    body {
    background-color:wheat;
    }
</style>
@foreach (var pie in Model.Pies)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pie.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                <h3>
               <tr>   <td>  <a asp-controller="Pie" asp-action="Categories" asp-route-id="@pie.PieId">@pie.Name</a></td></tr>
                </h3>
                <p>@pie.ShortDescription</p>
                
            </div>
        </div>
    </div> 
}
