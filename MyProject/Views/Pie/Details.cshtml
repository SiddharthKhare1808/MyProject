@using SiddharthPieShop.Models
@model Pie

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href=#> @Model.Name </a>
        </h3>
    
        <h4 style="font-family:cursive">@Model.ShortDescription</h4>
        <p style="border-block:dashed;background-image:url('/images/imageP.jpg');">@Model.LongDescription</p>
       
      
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"asp-route-pieId="@Model.PieId">Add to cart</a>
            </p>
        </div>
    </div>
</div>