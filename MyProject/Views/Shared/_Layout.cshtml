<!DOCTYPE html>
<html lang="en">
<head>
         @*<style>
    body {
    background-color:wheat;
    }
</style>*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Siddharth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shashwat.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="background-color:wheat" >
                    
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pie" asp-action="List">Home</a>
                        </li>
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pie" asp-action="PieWeek">Pies of the week</a>
                      </li>
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pie" asp-action="FruitsPies">Fruits Pies</a>
                      </li>
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pie" asp-action="CheesePies">Cheese Pies</a>
                      </li>
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pie" asp-action="SeasonalPies">Seasonal Pies</a>
                      </li>
                         </li>
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pie" asp-action="Create">Create Pies</a>
                      </li>
                       <li class="nav-item">
                     @*<partial name="_LoginPartial">*@ 
                       </li>
                     
                    </ul>
                   <div class="dropdown space">
                    <li class="btncolor text-light btn btn-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                      Category
                    </li>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                                   
                      <li><a class="dropdown-item" asp-controller="Pie" asp-action="FruitPies"  >Fruit pies</a></li>
                      <li><a class="dropdown-item" asp-controller="Pie" asp-action="CheesePies" >Cheese cakes</a></li>
                      <li><a class="dropdown-item" asp-controller="Pie" asp-action="SeasonalPies" >Seasonal pies</a></li>
                    

                    </ul>
                </div>
                @await Component.InvokeAsync("CategoryMenu")
                @*@await Component.InvokeAsync("CategoryMenuNew")*@



                </div>
            </div>
        </nav>
    </header>
   <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <img class="img-responsive" alt="Pie Shop" src="~/images/SLogo.png.png" height="200" width="200">

                </p>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Siddharth - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
